package com.patterns;

public class SquarePattern {
	public void square(int n)
	{
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=n;j++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
	}
	public void hallo(int n)
	{
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=n;j++)
			{
				if(i==1||j==1||i==n||j==n)
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}
	public void pa(int n)
	{
		for(int i=1;i<=n;i++)
		{
			if(i%2!=0)
			{
				for(int j=1;j<=n;j++)
				{
					System.out.print(j);
				}
			}
			else 
			{
				for(int j=n;j>=1;j--)
				{
					System.out.print(j);
				}
			}
			System.out.println();
		}
	}
	public void pat(int n)
	{
		for(int i=1;i<=n;i++)
		{
			if(i%2!=0)
			{
				int num=n*i+1;
				for(int j=1;j<=n;j++)
				{
					System.out.print(num);
				}
			}
		}
	}
	public static void main(String[] args) {
		SquarePattern s= new SquarePattern();
		//s.square(5);
		//s.hallo(5);
		//s.pa(5);
		pat(5)
	}

}
